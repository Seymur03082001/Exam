@using TheTown
@using TheTown.ViewModels.Product;
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Product>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Icon</th>
                <th>Title</th>
                <th>About</th>

                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model ?? new List<Product>())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Icon</td>
                    <td>@item.Title</td>
                    <td>@item.About</td>
                    <td><a class="btn btn-info" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

